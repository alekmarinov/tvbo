<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/program_bar_channel_width"
    android:layout_height="@dimen/program_bar_height">

    <!-- Channel logo -->

    <ImageView
        android:id="@+id/channel_glow"
        android:layout_width="142dip"
        android:layout_height="120dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="51dip"
        android:background="@drawable/tv_selected_channel_background" />

    <ImageView
        android:id="@+id/channel_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="96dip" />

    <TextView
        android:id="@+id/channel_no"
        style="@style/ChannelNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="51dip"
        android:singleLine="true"/>

</RelativeLayout>