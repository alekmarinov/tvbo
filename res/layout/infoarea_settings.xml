<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoarea_settings"
    android:layout_width="match_parent"
    android:layout_height="@dimen/infoarea_height"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="92dp"
    android:layout_marginTop="30dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <View
        android:id="@+id/videoview_placeholder"
        android:layout_width="@dimen/infoarea_video_width"
        android:layout_height="@dimen/infoarea_height"
        android:padding="0dp"
        android:background="@drawable/program_thumbnail_mask" />

    <LinearLayout
        android:id="@+id/settings_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
