    <style name="MessageInfo">
        <item name="android:textSize">@dimen/message_fontsize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">0dip</item>
    </style>    

    <style name="ChannelNumber">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/channel_number</item>
    </style>
    <style name="OptionsButton">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>
    <style name="MenuItemCaption">
        <item name="android:textColor">@color/menu_item_caption</item>
        <item name="android:textSize">@dimen/menu_item_caption</item>
        <item name="android:paddingTop">30dip</item>
    </style>
