<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen" />

    <style name="ProgramText">
        <item name="android:textColor">@color/program_text_normal</item>
        <item name="android:textSize">@dimen/program_text_size_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProgramTextHighlight">
        <item name="android:textColor">@color/program_text_highlight</item>
        <item name="android:textSize">@dimen/program_text_size_highlight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MessageInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/message_fontsize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>
    <style name="MessageTitle" parent="MessageInfo">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/selection_prompt</item>
        <item name="android:paddingLeft">0dip</item>
    </style>

    <style name="ChannelNumber">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/channel_number</item>
    </style>

    <style name="OptionsButton">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">10dip</item>
    </style>

    <style name="MenuItemCaption">
        <item name="android:textColor">@color/menu_item_caption</item>
        <item name="android:textSize">@dimen/menu_item_caption_size</item>
        <item name="android:paddingTop">30dip</item>
    </style>

    <style name="SelectionPrompt">
        <item name="android:textColor">@color/selection_prompt</item>
        <item name="android:textSize">@dimen/selection_prompt_size</item>
    </style>

    <style name="List">
        <item name="android:dividerHeight">0dip</item>
        <item name="android:divider">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:background">@drawable/list_item_selector</item>
    </style>

    <style name="EditField">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textfield_size</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:background">@drawable/editfield</item>
        <item name="android:gravity">bottom</item>
        <item name="android:maxLength">60</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:layout_marginLeft">44dip</item>
        <item name="android:textColor">@color/edittext</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditFieldInfo">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/selection_prompt_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/list_item_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="RadioButton" parent="Button">
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/radio_button</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <!-- FIXME: Network Wizard -->
    <style name="WizardButton">
        <item name="android:textColor">@color/wizard_text_normal</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="WizardText">
        <item name="android:textColor">@color/wizard_text_normal</item>
        <item name="android:textSize">@dimen/wizard_text_size_normal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
