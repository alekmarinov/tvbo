<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen" />

    <style name="ProgramText">
        <item name="android:textColor">@color/program_text_normal</item>
        <item name="android:textSize">@dimen/program_text_size_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ProgramTextHighlight">
        <item name="android:textColor">@color/program_text_highlight</item>
        <item name="android:textSize">@dimen/program_text_size_highlight</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

