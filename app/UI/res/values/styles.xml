<resources>

    <style name="AppTheme" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen" />
    
    <style name="ProgramText">
        <item name="android:textColor">@color/programs_program_text</item>
        <item name="android:textSize">@dimen/programs_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="ProgramTextHighlight">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/programs_highlight_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
