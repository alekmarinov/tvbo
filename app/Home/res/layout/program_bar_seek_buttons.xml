<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="@dimen/program_bar_height"
    android:background="@android:color/transparent" >
    
    <ImageView 
        android:id="@+id/program_bar_middle_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/play_btn"/>
    
    <ImageView 
        android:id="@+id/program_bar_up_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/program_bar_middle_button"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/forward_btn"/>
    <ImageView 
        android:id="@+id/program_bar_down_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/program_bar_middle_button"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/rewind_btn"/>
    <ImageView 
        android:id="@+id/program_bar_left_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/program_bar_middle_button"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/rewind_btn"/>
    <ImageView 
        android:id="@+id/program_bar_right_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/program_bar_middle_button"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/forward_btn"
        />
    
    
    
    </RelativeLayout>